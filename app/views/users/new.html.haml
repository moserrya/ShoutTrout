%h1 Users#new
%p Find me in app/views/users/new.html.haml

.large-4.columns
  = form_for @user, remote: true do |f|
    = f.label :name
    = f.text_field :name
    = f.label :phone_number
    = f.text_field :phone_number
    = f.label :email
    = f.text_field :email
    = f.label :password
    = f.password_field :password
    = f.label :password_confirmation
    = f.password_field :password_confirmation
    = f.label :hour_to_send_message, "When would you like your daily message? (PST)"
    = f.select :hour_to_send_message, options_for_select( (1..11).map {|hr| ["#{hr} AM", hr]} + [['Noon', 12]] + (1..11).map {|hr| ["#{hr} PM", hr + 12]} + [['Midnight', 0]], 12)
    = f.fields_for :contact do |c|
      = c.label :contact_name
      = c.text_field :name
      = c.label :contact_phone_number
      = c.text_field :phone_number
    = f.submit
